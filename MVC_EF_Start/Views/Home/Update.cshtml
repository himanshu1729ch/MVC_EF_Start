            <tr>
            <tr>
                <td>
                    @if (Model != null)
                    {
                    <form>
                        @using (Html.BeginForm("up", "Home", FormMethod.Post))
                        {
                            @Html.HiddenFor(m => m.committee_id)
                            <label for="CashAtStart">Cash At the beginning<br> <br></label><br>
                            @Html.TextBoxFor(m => m.last_cash_on_hand_end_period)
                            
                            <input type="submit" value="submit" style="background-color:darkslategray"
                                   onclick="return postMessage('Updated Succesfully');" />
                        }
                    </form>
                    }
                </td>
            </tr>
        </table>        
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
